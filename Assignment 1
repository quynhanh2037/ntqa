#2 Name Asking:
enter_name = input("Enter your name: ")
print("Hello,", enter_name, "!")

#3 Circle 
import math
radius = float(input("Enter the radius of the circle: "))
circumference = 2 * math.pi * radius
print("The circumference of the circle is:", circumference)

#4 Rectangle
length = float(input("Enter rectangle's length: "))
width =  float(input("Enter rectangle's width: "))
perimeter = length*2 + width*2
print("The perimeter off the rectangle is: ", perimeter)

#5 Interger numbers
no_1 = int(input("Enter your first interger: "))
no_2 = int(input("Enter your second interger: "))
no_3 = int(input("Enter your third interger: "))

cal_sum = no_1 + no_2 + no_3
cal_product = no_1 * no_2 * no_3
cal_avr = (cal_sum) / 3

print("Sum: ", cal_sum)
print("Product: ", cal_product)
print("Average: ", cal_avr)

#6 Weight
talents = int(input("Enter talents:\n"))
pounds = int(input("\nEnter pounds:\n"))
lots = float(input("\nEnter lots:\n"))

grams_per_lot = 13.3
lots_per_pound = 32
pounds_per_talent = 20
total_grams = (
    talents * pounds_per_talent * lots_per_pound * grams_per_lot +
    pounds * lots_per_pound * grams_per_lot +
    lots * grams_per_lot
)

kilograms = int(total_grams // 1000)
grams = total_grams % 1000

print("\nThe weight in modern units:")
print(f"{kilograms} kilograms and {grams:.2f} grams.")

#7 Digit
import random
choose_3_digit = [random.randint(0, 9) for _ in range(3)]
choose_4_digit = [random.randint(1, 6) for _ in range(4)]

print("3-digit code where each number is between 0 and 9: ", ''.join(map(str, choose_3_digit)))
print("4-digit code where each number is between 1 and 6: ", ''.join(map(str, choose_4_digit)))
